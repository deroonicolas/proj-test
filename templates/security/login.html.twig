{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container">
  <div class="d-flex flex-column align-items-center justify-content-center m-3">
  <form method="post">
      {% if error %}
          <div class="alert alert-danger m-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
      {% endif %}

      {% if app.user %}
          <div class="m-3">
              Vous êtes connecté : {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
          </div>
      {% endif %}

    
      <h1 class="m-3 fs-4 fw-bold">Entrez vos identifiants</h1>
      <label for="inputEmail">Email</label>
      <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mt-2" autocomplete="email" required autofocus>
      <label for="inputPassword" class="mt-2">Mot de passe</label>
      <input type="password" name="password" id="inputPassword" class="form-control mt-2" autocomplete="current-password" required>

      <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}">

      <button class="mt-3 btn btn-lg btn-primary" type="submit">
          Se connecter
      </button>
    
  </form>
</div>

{% endblock %}
